#ifndef MAPPER_H
#define MAPPER_H

#include "qobject.h"
#include "jnistring.h"

namespace jni{

class Mapper : public QObject {
private:
    Q_DISABLE_COPY(Mapper)
    QMap<pair<JNIString, JNIClass*>> fieldmap;
public:    
    Mapper() : QObject() {}
    void instantiate();
    void update();
    void done();

    bool connect();
};

}

#endif // MAPPER_H
